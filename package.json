{
  "name": "bots-business-viber",
  "version": "1.0.1",
  "main": "./dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode production",
    "eslint-test": "eslint -c ./.eslintrc.json ./src/**/*.js",
    "live": "nodemon",
    "start": "cross-env NODE_ENV=production node --no-deprecation ./node_modules/.bin/forever start --uid=bot-name --append ./dist/index.js",
    "stop": "forever stop bot-name"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "forever": "^1.0.0",
    "husky": "^2.3.0",
    "moment": "^2.24.0",
    "mongoose": "^5.5.12",
    "viber-bot": "^1.0.13",
    "winston": "^3.2.1",
    "winston-mail": "^1.5.2",
    "winston-telegram": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn eslint-test",
      "pre-push": "yarn eslint-test"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/runtime": "^7.4.5",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.17.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-node-externals": "^1.7.2"
  }
